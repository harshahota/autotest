FROM ubuntu

RUN apt-get update
RUN apt-get install -y curl firefox npm git

RUN npm install -g npm

RUN git clone https://github.com/harshahota/autotest.git
RUN autotest/npm install



echo "root=harshahota@gmail.com" >> /etc/ssmtp/ssmtp.conf
echo "# Example for relaying to Gmail servers" >> /etc/ssmtp/ssmtp.conf
echo "mailhub=smtp.gmail.com:587" >> /etc/ssmtp/ssmtp.conf
echo "AuthUser=hariiiamhere@gmail.com" >> /etc/ssmtp/ssmtp.conf
echo "AuthPass=hforharsha123" >> /etc/ssmtp/ssmtp.conf
echo "UseTLS=YES" >> /etc/ssmtp/ssmtp.conf
echo "UseSTARTTLS=YES" >> /etc/ssmtp/ssmtp.conf


echo -e "to: receiver@domain.tld\nsubject: test\n"| (cat - && uuencode /report.zip report.zip) | ssmtp harshahota123@gmail.com